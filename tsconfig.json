{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    // ðŸ”´ ESTO ES LO IMPORTANTE PARA JSX/TSX
    "jsx": "preserve",

    // Alias "@/" â†’ raÃ­z del proyecto (para imports como "@/lib/...")
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "incremental": true
  },
  // Asegura que TypeScript analice archivos .ts y .tsx
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
